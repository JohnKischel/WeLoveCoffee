@model WeLoveCoffee.Data.EntityModels.User;
@{
    ViewData["Title"] = "Home Page";
}
    <div class="container">
        <form>
            <div class="form-group">
                <label for="Name">Id: @Model.Id</label>
            </div>
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" id="Name" class="form-control" value="@Model.Name" />
            </div>
            <div class="form-group">
                <label for="Claim">Name</label>
                <input type="text" id="Name" class="form-control" value="@Model.Name" />
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                <input type="Password" id="Password" class="form-control" value="@Model.Password" />
            </div>
            <label class="mt-3">Access roles:</label>
            <div class="container border rounded border-danger py-3">

                <div class="form-group">
                    @foreach (var item in ViewBag.Claims)
                    {
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="@item">
                            <label class="form-check-label" for="@item">@item</label>
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
