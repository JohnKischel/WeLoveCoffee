@using WeLoveCoffee.Data.EntityModels;
@model List<WeLoveCoffee.Data.EntityModels.Product>;
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    
    <form>
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" placeholder="Name" id="Name" />
        </div>
        <div class="form-group">
            <label for="Price">Price</label>
            <input type="text" class="form-control" placeholder="Price" id="Price" />
        </div>
        <div class="form-group">
            <label for="ProductType">Example select</label>
            <select class="form-control" id="ProductType">
                @foreach (var producttype in ViewBag.ProductTypes)
                {
                    <option>@producttype.Type</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Add product</button>
    </form>
    </div>
