@model WeLoveCoffee.Data.EntityModels.Product;
@{
    ViewData["Title"] = "Add - Product";
}
    <div class="container">

        @using (Html.BeginForm("Add", "Product", FormMethod.Post))
        {
            <!--Name-->
            <div class="form-group">
                <label>Id</label>
                <input type="text" class="form-control" readonly id="Id" asp-for="Id" />
            </div>

            <!--Name-->
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" asp-for="Name" />
            </div>

            <!--Price-->
            <div class="form-group">
                <label for="Price">Price</label>
                <input type="text" class="form-control" id="Price" asp-for="Price" />
            </div>

            <!--ProductType-->
            <div class="form-group">
                <label for="ProductType">ProductType</label>
                <select class="form-control" id="ProductType" name="ProductTypeId" asp-for="ProductTypeId">
                    @foreach (var producttype in ViewBag.ProductTypes)
                    {
                        <option value="@producttype.ProductTypeId">@producttype.Type</option>
                    }
                </select>
            </div>

            <!--Roast-->
            <div class="form-group">
                <label for="RoastId">Roast</label>
                <select class="form-control" id="Roast" name="RoastId" asp-for="RoastId">
                    @foreach (var roast in ViewBag.Roasts)
                    {
                        <option value="@roast.RoastId">@roast.Name</option>
                    }
                </select>
            </div>

            <!--ImagePath-->
            <div class="form-group">
                <label for="ImagePath">ImagePath</label>
                <input type="text" class="form-control" id="ImagePath" asp-for="ImagePath" />
            </div>

            <!--Submit-->
            <button type="submit" class="btn btn-primary">Add</button>
        }
    </div>
