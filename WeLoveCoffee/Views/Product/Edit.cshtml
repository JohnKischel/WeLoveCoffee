@model WeLoveCoffee.Data.EntityModels.Product;
@{
    ViewData["Title"] = "Edit - Product";
}
    <div class="container">

        @using (Html.BeginForm("Update", "Product", FormMethod.Post))
        {
            <!---->
            <div class="form-group">
                <label>Id</label>
                <input type="text" class="form-control" readonly value="@Model.Id" id="Id" asp-for="Id" />
            </div>

            <!---->
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" value="@Model.Name" id="Name" asp-for="Name" />
            </div>

            <!---->
            <div class="form-group">
                <label for="Price">Price</label>
                <input type="text" class="form-control" value="@Model.Price" id="Price" asp-for="Price" />
            </div>

            <!--ProductType-->
            <div class="form-group">
                <label for="ProductType">ProductType</label>
                <select class="form-control" id="ProductType" name="ProductType" asp-for="ProductTypeId">
                    @foreach (var producttype in ViewBag.ProductTypes)
                    {
                        <option value="@producttype.ProductTypeId">@producttype.Type</option>

                    }
                </select>
            </div>

            <!--Roast-->
            <div class="form-group">
                <label for="ProductType">Roast</label>
                <select class="form-control" id="Roast" name="RoastId" asp-for="RoastId">
                    @foreach (var roast in ViewBag.Roasts)
                    {
                        <option value="@roast.RoastId">@roast.Name</option>
                    }
                </select>
            </div>

            <!--ImagePath-->
            <div class="form-group">
                <label for="ImagePath">ImagePath</label>
                <input type="text" class="form-control" value="@Model.ImagePath" id="ImagePath" asp-for="ImagePath" />
            </div>

            <!--submit-->
            <button type="submit" class="btn btn-primary">Apply changes</button>
        }
    </div>
