@model List<WeLoveCoffee.Data.EntityModels.Product>;
@{
    ViewData["Title"] = "Product";
}

<div class="container">

    <div class="list-group my-3">
        <a class="list-group-item list-group-item-action list-group-item-success" href="/Product/Add">New product</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="bg-primary text-center">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">ProductType</th>
                    <th scope="col">Roast</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in ViewBag.Product)
                {
                    <tr>
                        <td class="text-nowrap">@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>@product.ProductType.Type</td>
                        <td>@product.Roast.Name</td>
                        <td class="text-center m-0 pb-5">
                            @using (Html.BeginForm(FormMethod.Post))
                            {
                                <input value="@product.Id" name="productId" style="visibility:hidden" />
                                <div class="d-flex justify-content-center">
                                    <div class="mx-2">
                                        <input type="submit" class="btn btn-primary" value="Edit" asp-action="Edit" asp-controller="Product" />
                                    </div>
                                    <div class=" mx-2">
                                        <input type="submit" class="btn btn-danger" value="Delete" asp-action="Delete" asp-controller="Product" />
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
