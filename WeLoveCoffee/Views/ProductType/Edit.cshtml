@model WeLoveCoffee.Data.EntityModels.ProductType;
@{
    ViewData["Title"] = "ProductType";
}
<div class="container">

    @using (Html.BeginForm("Update","ProductType",FormMethod.Post))
    {
        <div class="form-group">
            <label>Id</label>
            <input type="text" class="form-control" readonly asp-for="ProductTypeId" value="@Model.ProductTypeId" />
        </div>
        <div class="form-group">
            <label for="Type">Type</label>
            <input type="text" class="form-control" value="@Model.Type" id="Type" asp-for="Type"/>
        </div>

        <button type="submit" class="btn btn-primary">Apply changes</button>
    }
</div>
