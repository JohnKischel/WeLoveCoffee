@model List<WeLoveCoffee.Data.EntityModels.ProductType>;
@{
    ViewData["Title"] = "ProductType";
}

<div class="container">

    <div class="list-group my-3">
        <a class="list-group-item list-group-item-action list-group-item-success" href="/ProductType/Add">New ProductType</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="bg-primary text-center">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Type</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var productType in ViewBag.ProductType)
                {
                    <tr>
                        <td class="text-nowrap">@productType.ProductTypeId</td>
                        <td>@productType.Type</td>
                        <td class="text-center m-0 pb-5">
                            @using (Html.BeginForm(FormMethod.Post))
                            {
                                <input value="@productType.ProductTypeId" name="ProductTypeId" style="visibility:hidden" />
                                <div class="d-flex justify-content-center">
                                    <div class="mx-2">
                                        <input type="submit" class="btn btn-primary" value="Edit" asp-action="Edit" asp-controller="ProductType" />
                                    </div>
                                    <div class=" mx-2">
                                        <input type="submit" class="btn btn-danger" value="Delete" asp-action="Delete" asp-controller="ProductType" />
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
