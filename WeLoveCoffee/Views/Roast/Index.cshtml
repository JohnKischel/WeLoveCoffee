@model WeLoveCoffee.Data.EntityModels.Roast;
@{
    ViewData["Title"] = "Roast";
}

<div class="container">

    <div class="list-group my-3">
        <a class="list-group-item list-group-item-action list-group-item-success" href="/Roast/Add">New Roast</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="bg-primary text-center">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">isCurrentRoast</th>
                    <th scope="col">Strength</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Roast in ViewBag.Roast)
                {
                <tr>
                    <td class="text-nowrap">@Roast.RoastId</td>
                    <td>@Roast.Name</td>
                    <td>@Roast.Price</td>
                    <td>@Roast.CurrentRoast</td>
                    <td>@Roast.Strength</td>
                    <td class="text-center m-0 pb-5">
                        @using (Html.BeginForm(FormMethod.Post))
                        {
                            <input value="@Roast.RoastId" name="RoastId" style="visibility:hidden" />
                            <div class="d-flex justify-content-center">
                                <div class="mx-2">
                                    <input type="submit" class="btn btn-primary" value="Edit" asp-action="Edit" asp-controller="Roast" />
                                </div>
                                <div class=" mx-2">
                                    <input type="submit" class="btn btn-danger" value="Delete" asp-action="Delete" asp-controller="Roast" />
                                </div>
                            </div>
                        }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
