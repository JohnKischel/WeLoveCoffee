@model List<WeLoveCoffee.Data.EntityModels.Product>;

@{
    ViewData["Title"] = "User";
}


<div class="container">

    <div class="list-group my-3">
        <a class="list-group-item list-group-item-action list-group-item-success" href="/User/Add">New user</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="bg-primary text-center">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Created</th>
                    <th scope="col">Consumed</th>
                    <th scope="col">ConsumedTotal</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in ViewBag.User)
                {
                    <tr>
                        <td class="text-nowrap">@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Created</td>
                        <td>@user.Consumed</td>
                        <td>@user.ConsumedTotal</td>
                        <td class="text-center m-0 pb-5">
                            @using (Html.BeginForm(FormMethod.Post))
                            {
                                <input value="@user.Id" name="userId" style="visibility:hidden" />
                                <div class="d-flex justify-content-center">
                                    <div class="mx-2">
                                        <input type="submit" class="btn btn-primary" value="Edit" asp-action="Edit" asp-controller="User" />
                                    </div>
                                    <div class="mx-2">
                                        <input type="submit" class="btn btn-danger" value="Delete" asp-action="Delete" asp-controller="User" />
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>